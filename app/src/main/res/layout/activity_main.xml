<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="epicodus.madlab.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Silly word:"
        android:id="@+id/textView3" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Last Name"
        android:id="@+id/textView"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sillyword"
        android:background="@color/background"
        android:textColor="@color/colorEdit"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="5dp"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ILLNESS"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Noun (plural)"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Adjective"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Adjective"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silly word"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adjective"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView10"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastName"
        android:background="@color/background"
        android:textColor="@color/colorEdit"
        android:layout_marginBottom="5dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignLeft="@+id/sillyword"
        android:layout_alignStart="@+id/sillyword"
        android:layout_below="@+id/sillyword"
        android:layout_alignRight="@+id/sillyword"
        android:layout_alignEnd="@+id/sillyword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/illness"
        android:layout_marginBottom="5dp"
        android:background="@color/background"
        android:textColor="@color/colorEdit"
        android:layout_below="@+id/lastName"
        android:layout_alignLeft="@+id/lastName"
        android:layout_alignStart="@+id/lastName"
        android:layout_alignRight="@+id/lastName"
        android:layout_alignEnd="@+id/lastName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noun"
        android:layout_marginBottom="5dp"
        android:background="@color/background"
        android:textColor="@color/colorEdit"
        android:layout_below="@+id/illness"
        android:layout_alignLeft="@+id/illness"
        android:layout_alignStart="@+id/illness"
        android:layout_alignRight="@+id/illness"
        android:layout_alignEnd="@+id/illness" />

    <EditText
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adjective1"
        android:background="@color/background"
        android:textColor="@color/colorEdit"
        android:layout_below="@+id/noun"
        android:layout_alignLeft="@+id/noun"
        android:layout_alignStart="@+id/noun"
        android:layout_alignRight="@+id/noun"
        android:layout_alignEnd="@+id/noun" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adjective2"
        android:layout_marginBottom="5dp"
        android:background="@color/background"
        android:textColor="@color/colorEdit"
        android:layout_below="@+id/adjective1"
        android:layout_alignRight="@+id/adjective1"
        android:layout_alignLeft="@+id/adjective1"
        android:layout_alignStart="@+id/adjective1"
        android:layout_alignEnd="@+id/adjective1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sillyword2"
        android:layout_marginBottom="5dp"
        android:background="@color/background"
        android:textColor="@color/colorEdit"
        android:layout_below="@+id/adjective2"
        android:layout_alignLeft="@+id/adjective2"
        android:layout_alignStart="@+id/adjective2"
        android:layout_alignRight="@+id/adjective2"
        android:layout_alignEnd="@+id/adjective2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/place"
        android:layout_marginBottom="5dp"
        android:background="@color/background"
        android:textColor="@color/colorEdit"
        android:layout_below="@+id/sillyword2"
        android:layout_alignLeft="@+id/sillyword2"
        android:layout_alignStart="@+id/sillyword2"
        android:layout_alignRight="@+id/sillyword2"
        android:layout_alignEnd="@+id/sillyword2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number"
        android:layout_marginBottom="5dp"
        android:background="@color/background"
        android:textColor="@color/colorEdit"
        android:layout_below="@+id/place"
        android:layout_alignLeft="@+id/place"
        android:layout_alignStart="@+id/place"
        android:layout_alignRight="@+id/place"
        android:layout_alignEnd="@+id/place" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adjective3"
        android:layout_marginBottom="5dp"
        android:background="@color/background"
        android:textColor="@color/colorEdit"
        android:layout_below="@+id/number"
        android:layout_alignLeft="@+id/number"
        android:layout_alignStart="@+id/number"
        android:layout_alignRight="@+id/number"
        android:layout_alignEnd="@+id/number" />

</RelativeLayout>
